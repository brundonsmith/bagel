
class Counter {
    count: number = 0

    public func memo render() =>
        <div>
            <button onClick={this.decrement}>{'-'}</button>
            <span>{this.count}</span>
            <button onClick={this.increment}>{'+'}</button>
        </div>

    proc decrement() {
        this.count = this.count - 1;
    }

    proc increment() {
        this.count = this.count + 1;
    }
}

from '../../lib/wrappers/random' import { random }
from '../../lib/wrappers/time' import { millis, seconds, minutes }

proc main() {
    let counter = new Counter();
    let num = 0;

    let roll = () {
        random((n) {
            num = n;
        });
    };
    
    autorun () {
        ___render(
            <div>
                <button onClick={roll}>{'Rnd'}</button> {num}<br></br>
                {counter.render()}
                <div>
                    {'Millis: ' + millis()}
                    {'Seconds: ' + seconds()}
                    {'Minutes: ' + minutes()}
                </div>
            </div>
        );
    }
    forever;
}